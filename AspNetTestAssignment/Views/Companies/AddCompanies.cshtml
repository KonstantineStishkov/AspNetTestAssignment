@model Company

<form>
    <table class="input-table">
        <tr class="input-header-line">
            <th class="input-header-cell" colspan="2">Adding new company</th>
        </tr>
        <br />
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="Name"></label>
            </th>
            <td class="input-cell">
                <input asp-for="Name" class="form-control" />
                <span class="error-message" asp-validation-for="Name"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="Address"></label>
            </th>
            <td class="input-cell">
                <textarea asp-for="Address" class="form-control" style="resize: none;"></textarea>
                <span class="error-message" asp-validation-for="Address"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="City"></label>
            </th>
            <td class="input-cell">
                <input asp-for="City" class="form-control" />
                <span class="error-message" asp-validation-for="City"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="State"></label>
            </th>
            <td class="input-cell">
                <input asp-for="State" class="form-control" />
                <span class="error-message" asp-validation-for="State"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="Phone"></label>
            </th>
            <td class="input-cell">
                <input asp-for="Phone" class="form-control" />
                <span class="error-message" asp-validation-for="Phone"></span>
            </td>
        </tr>
        <tr class="buttons-line">
            <td class="button-cell">
                <button type="button" class="form-control Companies-button Companies-submit">Submit</button>
            </td>
            <td class="button-cell">
                <button type="button" class="form-control Companies-button Companies-cancel">Cancel</button>
            </td>
        </tr>
    </table>
</form>
