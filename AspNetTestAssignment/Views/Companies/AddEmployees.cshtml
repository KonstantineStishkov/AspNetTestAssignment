@model Employee

<form>
    <input asp-for="Id" hidden />
    <input asp-for="CompanyId" hidden />
    <table class="input-table">
        <tr class="input-header-line">
            <th class="input-header-cell" colspan="2">Adding new employee</th>
        </tr>
        <br />
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="FirstName"></label>
            </th>
            <td class="input-cell">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="LastName"></label>
            </th>
            <td class="input-cell">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="Title"></label>
            </th>
            <td class="input-cell">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="BirthDate"></label>
            </th>
            <td class="input-cell">
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate"></span>
            </td>
        </tr>
        <tr class="input-line">
            <th class="input-label-cell">
                <label asp-for="Position"></label>
            </th>
            <td class="input-cell">
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position"></span>
            </td>
        </tr>
        <tr class="buttons-line">
            <td class="button-cell">
                <button type="button" class="form-control Employees-button Notes-submit">Submit</button>
            </td>
            <td class="button-cell">
                <button type="button" class="form-control Employees-button Notes-cancel">Cancel</button>
            </td>
        </tr>
    </table>
</form>
